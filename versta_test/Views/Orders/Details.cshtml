@model versta_test.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Просмотр заказа</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Город отправителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenderCity)
        </dd>
        <dt class="col-sm-2">
            Адрес отправителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenderAddress)
        </dd>
        <dt class="col-sm-2">
            Город получателя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReceiverCity)
        </dd>
        <dt class="col-sm-2">
            Адрес получателя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReceiverAddress)
        </dd>
        <dt class="col-sm-2">
            Вес груза
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            Дата забора груза
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickupDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Вернуться к списку заказов</a>
</div>